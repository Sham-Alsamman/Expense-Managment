<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="426dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/purplebox"
        android:elevation="5dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btn"
        android:layout_width="110dp"
        android:layout_height="33dp"
        android:layout_marginStart="176dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/purpleborder"
        android:elevation="50dp"
        android:shadowColor="#12531111"
        android:text="Apply"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip4"
        app:layout_constraintVertical_bias="0.72" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="70dp"
        android:layout_height="37dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="277dp"
        android:layout_marginEnd="268dp"
        android:elevation="50dp"
        android:shadowColor="#12531111"
        android:text="Type"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="281dp"
        android:elevation="50dp"
        android:shadowColor="#12531111"
        android:text="Date"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="196dp"
        android:elevation="50dp"
        android:shadowColor="#12531111"
        android:text="Filter by"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.673" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="74dp"
        android:layout_height="31dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="277dp"
        android:elevation="50dp"
        android:shadowColor="#12531111"
        android:text="Category"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.811" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="174dp"
        android:layout_height="39dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="265dp"
        android:background="@drawable/darkpurplebox"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:outlineAmbientShadowColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="171dp"
        android:layout_height="36dp"
        android:layout_marginStart="192dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/darkpurplebox"
        android:elevation="9dp"
        android:text=" dd-mm-yyyy"
        android:onClick="clickDataPicker"
        android:textAlignment="gravity"
        android:textSize="22dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip4"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_marginStart="158dp"
        android:layout_marginBottom="104dp"
        android:elevation="30dp"
        android:text="Individual"
        android:textColor="#FFFFFF"
        app:Background="@drawable/darkpurplebox"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chip5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.911" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip5"
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:layout_marginStart="283dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="104dp"
        android:background="#D4D4DD"
        android:elevation="30dp"
        android:text="Group"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.891" />

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="329dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="195dp"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_baseline_calendar_today_24" />


</androidx.constraintlayout.widget.ConstraintLayout>