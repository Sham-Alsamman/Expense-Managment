<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purplebox">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="70dp"
        android:layout_height="37dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="283dp"
        android:layout_marginBottom="450dp"
        android:elevation="50dp"
        android:shadowColor="#12531111"
        android:text="Type"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.901" />

    <Button
        android:id="@+id/btn"
        android:layout_width="110dp"
        android:layout_height="33dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="364dp"
        android:background="@drawable/purpleborder"
        android:elevation="50dp"
        android:shadowColor="#12531111"
        android:text="Apply"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/savedDate"
        android:layout_width="171dp"
        android:layout_height="36dp"
        android:layout_marginStart="192dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/darkpurplebox"
        android:elevation="9dp"
        android:text=" dd-mm-yyyy"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="669dp"
        android:elevation="50dp"
        android:shadowColor="#12531111"
        android:text="Filter by"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013" />

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_marginStart="262dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/ic_baseline_calendar_today_24"
        android:elevation="20dp"

        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="600dp"
        android:elevation="50dp"
        android:shadowColor="#12531111"
        android:text="Date"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/g"
        android:layout_width="244dp"
        android:layout_height="92dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/individual"
            android:layout_width="101dp"
            android:layout_height="49dp"

            android:layout_marginStart="19dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="122dp"
            android:layout_marginBottom="440dp"
            android:elevation="200dp"
            android:text="Individual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/group"
            android:layout_width="108dp"
            android:layout_height="49dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="-490dp"

            android:elevation="200dp"
            android:text="Group"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>